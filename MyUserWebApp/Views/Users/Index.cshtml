@model IEnumerable<MyUserWebApp.Models.MyUser>
@{
    ViewBag.Title = "List of customers";
}

@*<a asp-action="Create" asp-controller="Users">Add user</a>*@

<table class="table">
    <tr><th>Email</th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            
            <td>
                <form asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-sm btn-primary" asp-action="Edit" asp-route-id="@user.Id">Change</a>
                    <a class="btn btn-sm btn-primary" asp-action="ChangePassword" asp-route-id="@user.Id">Change password</a>
                    <button type="submit" class="btn btn-sm btn-danger">Delete</button>
                </form>
            </td>
        </tr>
    }
</table>
