@model MyUserWebApp.ViewModels.EditUserViewModel 

@{
    var userId = ViewBag.UserId;
    ViewData["UserId"] = Model.Id;
}

<head>
    <title>User Profile</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<form enctype="multipart/form-data" asp-route-id="@userId">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group" >
        <input type="hidden" asp-for="Id"  />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="text" asp-for="Email"  class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="control-label">Last name</label>
        <input type="text" asp-for="LastName"  class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FirstName" class="control-label">First name</label>
        <input type="text" asp-for="FirstName"  class="form-control" />
    </div>
    @if(User.IsInRole("Author"))
    {
    <div class="form-group">
        <label asp-for="AboutMe" class="control-label">About Me</label>
        <input type="text" asp-for="AboutMe" class="form-control" />
    </div> 
    }
    <lable></lable>
    <div class="form-group">
        <lable asp-for="Image" class="control-label">Image</lable>
        <input type="file" asp-for="Image" name="avatarFile" accept="image/*" />
    </div>
    <lable></lable>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a href="/Home/Index" class="btn btn-secondary">Cancel</a>
    </div>

    <div class="form-group">
        <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#confirmDeleteModal">Delete</button>
    </div>

<!-- Модальне вікно підтвердження видалення -->
<div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmDeleteModalLabel">Confirm delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                Are you sure want to delete this user?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" onclick="deleteUser()">Delete</button>
            </div>
        </div>
    </div>
</div>
</form>
<script>
    function deleteUser() {
        var userId = @Model.Id; // Отримання ідентифікатора користувача

        // Виконати FETCH-запит на видалення користувача
        fetch('/Users/Delete', {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json'
            },
            body: JSON.stringify({ userId: userId })
        })
            .then(response => {
                if (response.ok) {
                    // Оновити сторінку або виконати необхідні дії після видалення
                    location.reload();
                } else {
                    throw new Error('Сталася помилка при видаленні користувача.');
                }
            })
            .catch(error => {
                alert(error.message);
            });
    }
    deleteUser();

</script>