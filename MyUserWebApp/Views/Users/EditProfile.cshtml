@model MyUserWebApp.ViewModels.EditUserViewModel 

@{
    var userId = ViewBag.UserId;
    ViewData["UserId"] = Model.Id;
}

<head>
    <title>User Profile</title>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
</head>
<form enctype="multipart/form-data" asp-route-id="@userId">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group" >
        <input type="hidden" asp-for="Id"  />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="text" asp-for="Email"  class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="LastName" class="control-label">Last name</label>
        <input type="text" asp-for="LastName"  class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="FirstName" class="control-label">First name</label>
        <input type="text" asp-for="FirstName"  class="form-control" />
    </div>
    @if(User.IsInRole("Author"))
    {
    <div class="form-group">
        <label asp-for="AboutMe" class="control-label">About Me</label>
        <input type="text" asp-for="AboutMe" class="form-control" />
    </div> 
    }
    <lable></lable>
    <div class="form-group" @*method="post" action="@Url.Action("UploadAvatar", "Home")"*@>
        <lable asp-for="Image" class="control-label">Image</lable>
        <input type="file" asp-for="Image" name="avatarFile" accept="image/*" />
        @*<button type="submit" class="btn btn-secondary">Upload</button>*@
    </div>
    <lable></lable>
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @TempData["SuccessMessage"]
        </div>
    }
    
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-primary" />
        <a href="/Home/Index" class="btn btn-secondary">Cancel</a>
    </div>
</form>
<form method="post" action="@Url.Action("/Users/Delete")">
    <input type="hidden" name="userId" value="@Model.Id" />
        <button type="button" class="btn btn-danger" data-toggle="modal"
        data-target="#confirmDeleteModal">Delete</button>
        
        <div class="modal fade" id="confirmDeleteModal" tabindex="-1" role="dialog" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="confirmDeleteModalLabel">Delete User</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete this user?</p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                        <button type="submit" class="btn btn-danger">Delete</button>
                    </div>
                </div>
            </div>
        </div>
        
    </form>
